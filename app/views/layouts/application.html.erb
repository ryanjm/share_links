<!DOCTYPE html>
<html>
<head>
  <title>ShareLinks</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <nav>
    <ul>
      <li><%= link_to "All Links", web_links_path %></li>
      <li><%= link_to "Archived", archived_web_links_path %></li>
      <% if @user %>
        <li><%= link_to "Logout", logout_path %></li>
      <% end %>
    </ul>
  </nav>

  <%= yield %>
</div>

</body>
</html>
